@model MkAffiliationManagement.Models.Advertisment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row py-5">
    <div class="col-lg-9 mx-auto text-white text-center">
        <h1 class="display-4">Create a advertisment</h1>


    </div>
</div>
<hr />
<div style="justify-content:center; font-size:1.8em;" class="row text-white">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductEndorsment"></label>
                <textarea class="form-control" rows="3"></textarea>
                <span asp-validation-for="ProductEndorsment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPromotionalCode" class="control-label"></label>
                <input asp-for="ProductPromotionalCode" class="form-control" />
                <span asp-validation-for="ProductPromotionalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductLink" class="control-label"></label>
                <input asp-for="ProductLink" class="form-control" />
                <span asp-validation-for="ProductLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:20px;">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top:20px;">
    <a style="margin-left:440px;" class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
