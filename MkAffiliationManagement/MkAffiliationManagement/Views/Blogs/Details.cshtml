@using Microsoft.AspNetCore.Identity
@using MkAffiliationManagement.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model MkAffiliationManagement.Models.Blog

@{
    ViewData["Title"] = "Details";
}


<div class="row py-5">
    <div class="col-lg-9 mx-auto text-white text-center">
        <h1 class="display-4">Blog Details</h1>


    </div>
</div>
<div class="row py-5">
    <div class="col-lg-9 mx-auto text-white text-center">
        <h5 class="display-4">@Model.Title</h5>


    </div>
</div>
<hr />
<dl class="row" style="background:white; justify-content:center; border-radius:10px; padding:20px;">

    <dd class="col-sm-12 text-center">
        <b>

        @Html.DisplayFor(model => model.Title)
        </b>
    </dd>
    <dd class="col-sm-12 text-center">
        <b>

        Published on: @Html.DisplayFor(model => model.Date)
        </b>
    </dd>

    <dd class="col-sm-12 text-center" style=" overflow-wrap:break-word; text-overflow: ellipsis; padding-top: 50px;">
        @Html.DisplayFor(model => model.Body)
    </dd>


</dl>
<div class="row" style="justify-content:center;">

    <div style="display:flex; justify-content:space-between;">
        @if (SignInManager.IsSignedIn(User) && User.IsInRole(ApplicationRoles.Admin))
        {


            <a class="btn btn-primary" style="padding-left:50px; padding-right:50px;" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
        }
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        @if (SignInManager.IsSignedIn(User) && User.IsInRole(ApplicationRoles.Admin))
        {


        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.ID">Delete</a>
        }
    </div>
</div>



